{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "shell:allow-execute",
    "shell:allow-kill",
    "shell:allow-open",
    "http:default",
    "http:allow-fetch",
    "http:allow-fetch-cancel",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        }
      ],
      "deny": []
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "openprofia-server",
          "cmd": "binaries/openprofia-server",
          "sidecar": true
        }
      ]
    }
  ]
}
