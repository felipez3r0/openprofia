{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "OpenProfIA",
  "version": "0.1.0",
  "identifier": "com.openprofia.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bash scripts/prepare-sidecar.sh && pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "bundle": {
    "externalBin": ["binaries/openprofia-server"],
    "resources": ["binaries/server-bundle"]
  },
  "app": {
    "windows": [
      {
        "title": "OpenProfIA",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
